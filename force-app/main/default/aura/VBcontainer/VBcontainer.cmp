<aura:component controller="VBcontainerController" implements="flexipage:availableForRecordHome,force:hasRecordId" access="global" >
<aura:attribute name="recordId" type="Id" />
<aura:attribute name="Products" type="Product2" />
<aura:attribute name="Make" type="Make" />
<aura:attribute name="Model" type="Model" />
<aura:attribute name="Year" type="Year" />
<aura:attribute name="Columns" type="List" />
<aura:handler name="init" value="{!this}" action="{!c.myAction}" />

<force:recordData aura:id="makeRecord"
                  recordId="{!v.recordId}"
                  targetFields="{!v.Products}"
                  layoutType="FULL"
                  />
<lightning:card iconName="standard:make" title="{! 'Vehicle List for ' + v.Products.Name}">
    <!-- Vehicle list goes here -->
    <!--<lightning:datatable data="{! v.make }" columns="{! v.Columns }" keyField="Id" hideCheckboxColumn="true"/>-->

</lightning:card>
</aura:component>
